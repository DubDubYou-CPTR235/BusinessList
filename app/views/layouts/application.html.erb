<!DOCTYPE html>
<html>
  <head>
    <title>Developmental App</title>
	<%= stylesheet_link_tag "cssreset.css" %>
	<%= stylesheet_link_tag "styles.css" %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	</head>
  <body>
 

 
  	<header>
		Developmental App
	</header>
	
 	<div class="login">
		<% if user_signed_in? %>
			Signed in as <%= current_user.email %>
		<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
		<%= link_to "Manage", edit_user_registration_path %>
		<% else %>
			<%= link_to "Sign Up", new_user_registration_path %> or <%= link_to "sign In", new_user_session_path %>
		<% end %>
	</div>
	
	<nav>
		<ul>
			<li> <%= link_to "Home", new_user_session_path %> </li>
			<li> <%= link_to "Search", new_user_session_path %> </li>
			<li> <%= link_to "Business List", new_user_session_path %> </li>
		</ul>
	</nav>

	<div class="content">
		<%= yield %>
	</div>

	
	<footer>
		2015 Copyright &#169; Developmental APP
	</footer>
    
   </body>
</html>